<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Dashboard - Schudle</title>
    <link rel="stylesheet" href="/css/dashboard.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Kaushan+Script">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/fontawesome5-overrides.min.css">
</head>

<body id="page-top">
    <div id="wrapper">

        <%- include("./panels/professor-panel.ejs") %>

        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">

                <%- include("./headers/top-container.ejs") %>

                <div class="container-fluid">
                    <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0">Dashboard</h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 mb-4">
                            <div class="py-3 mb-4">
                                <h4 class="text-primary font-weight-bold m-0">Courses</h4>
                            </div>
                            <div class="row pr-4 pl-4">
                                <%courses.forEach(function(course){%>
                                <div class="col-lg-6" style="height: 400px;">
                                    <div class="card shadow mr-2 ml-2">
                                        <img class="card-img-top" src="/images/book2.jpg" style="height: 250px;"
                                            alt="Card image cap">
                                        <div class="card-body">
                                            <div class="row align-items-center no-gutters">
                                                <div class="col mr-2">
                                                    <h5 class="mb-0 text-uppercase" style="padding-bottom: 0.5rem;">
                                                        <strong>
                                                            <a role="button" href="/<%=school%>/<%= course.id %>">
                                                                <%=course.coursename%><br>
                                                            </a>
                                                        </strong>
                                                    </h5>
                                                    <p class="card-text"><span class="text-s">Details</span></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%})%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include("./footers/dashboard.ejs") %>
</body>