<!DOCTYPE html>
<html lang="en">

<head>
    <title>Dashboard - Schudle</title>
    <%- include("./headers/dashboard.ejs") %> 

<body id="page-top">
    <div id="wrapper">
        
        <%- include("./panels/admin-panel.ejs") %> 
        
        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                
                <%- include("./headers/top-container.ejs") %> 

                <div class="container-fluid">
                    <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0">Dashboard</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-primary py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-dark font-weight-bold h5 mb-0">
                                                <span><%= no_professor %></span></div>
                                            <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">
                                                <span>Professors</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-user-tie fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-success py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-dark font-weight-bold h5 mb-0">
                                                <span><%= no_student %></span></div>
                                            <div class="text-uppercase text-success font-weight-bold text-xs mb-1">
                                                <span>Students</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-info py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-dark font-weight-bold h5 mb-0">
                                                <span><%= courses.length %></span></div>
                                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1">
                                                <span>Courses</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-book fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-warning py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-dark font-weight-bold h5 mb-0"><span><%= events %> </span></div>
                                            <div class="text-uppercase text-warning font-weight-bold text-xs mb-1">
                                                <span>Events</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-comments fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 mb-4">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h4 class="text-primary font-weight-bold m-0">Courses</h4>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <%courses.forEach(function(course){%>
                                    <li class="list-group-item">
                                        <div class="row align-items-center no-gutters">
                                            <div class="col mr-2">
                                                <h5 class="mb-0 text-uppercase" style="padding-bottom: 0.5rem;">
                                                    <strong>
                                                        <a role="button"
                                                            href="/<%=school%>/admin/courses/<%=course.coursename%>">
                                                            <%=course.coursename%><br>
                                                        </a>
                                                    </strong>
                                                </h5>
                                                <span class="text-s">Details</span>
                                            </div>
                                        </div>
                                    </li>
                                    <%})%>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include("./footers/dashboard.ejs") %> 
    </div>
</body>

</html>