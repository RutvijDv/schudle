<!DOCTYPE html>
<html lang="en">
<head>
    <title>Delete User</title> 
    <%- include("./headers/dashboard.ejs") %>
</head>

<body id="page-top">
    <div id="wrapper">
        
        <%- include("./panels/admin-panel.ejs") %> 

        <div class="d-flex flex-column" id="content-wrapper">
            <div id="content">
                
                <%- include("./headers/top-container.ejs") %> 

                <div class="container-fluid">
                    <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0 text-uppercase">Delete User</h3>
                    </div>
                    <form action="/<%=school%>/admin/deleteUser" method="POST" id="delete_student">
                    <div class="container-fluid">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 font-weight-bold">List of Students</p>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 text-nowrap">
                                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                                            <label>Show&nbsp;<select
                                                    class="form-control form-control-sm custom-select custom-select-sm">
                                                    <option value="10" selected="">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select>&nbsp;</label></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="text-md-right dataTables_filter" id="dataTable_filter"><button
                                                class="btn btn-primary btn-md d-none d-sm-inline-block" type="submit"
                                                name="submit_student">Remove</button></div>
                                    </div>
                                </div>
                                <div class="table-responsive table mt-2" id="dataTable" role="grid"
                                    aria-describedby="dataTable_info">
                                    <table class="table my-0" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Name</th>
                                                <th>Position</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <%users.forEach(function(user){%>
                                                    <%if(user.role =='student'){%>
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox"><input
                                                                class="custom-control-input checkbox" type="checkbox"
                                                                id="<%=user._id%>" name="student"
                                                                value="<%=user._id +" "+ user.email%>">
                                                                <label class="custom-control-label"
                                                                for="<%=user._id%>"></label>
                                                        </div>
                                                    </td>
                                                    <td><img class="rounded-circle mr-2" width="30" height="30"
                                                            src="data:image/<%=user.profileimg.contentType%>;base64,
                                                            <%=user.profileimg.data.toString('base64')%>"><%=user.username%>
                                                    </td>
                                                    <td><%= user.role %></td>
                                                    
                                                </tr>
                                                <% }})%>
                                            
                                        </tbody>
                                        
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 align-self-center">
                                        <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">
                                            Showing 1 to 10 of 27</p>
                                    </div>
                                    <div class="col-md-6">
                                        <nav
                                            class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                                            <ul class="pagination">
                                                <li class="page-item disabled"><a class="page-link" href="#"
                                                        aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                <li class="page-item"><a class="page-link" href="#"
                                                        aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                    <br>
                    <form action="/<%=school%>/admin/deleteUser" method="POST" id="delete_professor">
                    <div class="container-fluid">
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <p class="text-primary m-0 font-weight-bold">List of Professors</p>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 text-nowrap">
                                        <div id="dataTable_length" class="dataTables_length" aria-controls="dataTable">
                                            <label>Show&nbsp;<select
                                                    class="form-control form-control-sm custom-select custom-select-sm">
                                                    <option value="10" selected="">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select>&nbsp;</label></div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="text-md-right dataTables_filter" id="dataTable_filter"><button
                                                class="btn btn-primary btn-md d-none d-sm-inline-block" type="submit"
                                                name="submit_professor">Remove</button></div>
                                    </div>
                                </div>
                                <div class="table-responsive table mt-2" id="dataTable" role="grid"
                                    aria-describedby="dataTable_info">
                                    <table class="table my-0" id="dataTable">
                                    
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Name</th>
                                                <th>Position</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <%users.forEach(function(user){%>
                                                <%if(user.role =='professor'){%>
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox"><input
                                                                class="custom-control-input checkbox" type="checkbox"
                                                                id="<%=user._id%>" name="professor"
                                                                value="<%=user._id +" "+ user.email%>">
                                                                <label class="custom-control-label"
                                                                for="<%=user._id%>"></label>
                                                        </div>
                                                    </td>
                                                    <td><img class="rounded-circle mr-2" width="30" height="30"
                                                            src="data:image/<%=user.profileimg.contentType%>;base64,
                                                            <%=user.profileimg.data.toString('base64')%>"><%=user.username%>
                                                    </td>
                                                    <td><%= user.role %></td>
                                                    
                                                </tr>
                                                <% }})%>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 align-self-center">
                                        <p id="dataTable_info" class="dataTables_info" role="status" aria-live="polite">
                                            Showing 1 to 10 of 27</p>
                                    </div>
                                    <div class="col-md-6">
                                        <nav
                                            class="d-lg-flex justify-content-lg-end dataTables_paginate paging_simple_numbers">
                                            <ul class="pagination">
                                                <li class="page-item disabled"><a class="page-link" href="#"
                                                        aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                <li class="page-item"><a class="page-link" href="#"
                                                        aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </form>
                    <br>
                </div>
            </div>

            <%- include("./footers/dashboard.ejs") %>

</body>


<script>
    function validateGrp1() {
        let things = document.querySelectorAll('.checkbox')
        let checked = 0;
        for (let thing of things) {
            thing.checked && checked++
        }
        if (checked) {
            things[things.length - 1].setCustomValidity("");
            document.getElementById('delete_student').submit();
        } else {
            things[things.length - 1].setCustomValidity("You must check at least one checkbox");
            things[things.length - 1].reportValidity();
        }
    }
    function validateGrp2() {
        let things = document.querySelectorAll('.checkbox')
        let checked = 0;
        for (let thing of things) {
            thing.checked && checked++
        }
        if (checked) {
            things[things.length - 1].setCustomValidity("");
            document.getElementById('delete_professor').submit();
        } else {
            things[things.length - 1].setCustomValidity("You must check at least one checkbox");
            things[things.length - 1].reportValidity();
        }
    }

    document.querySelector('[name=submit_student]').addEventListener('click', () => {
        validateGrp1()
    });
    document.querySelector('[name=submit_professor]').addEventListener('click', () => {
        validateGrp2()
    });
</script>

</html>